@model SignUpEmailConfirmation.ViewModels.User

@{
    Layout = "_Layout";
}

<form asp-action="Index" asp-controller="SignUp" method="post" id="signUpForm">
    <div class="form-group m-3">
        <label for="userName">Kullanıcı Adı</label>
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @required ="required" })
        @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group m-3">
        <label for="userName">Şifre</label>
        @Html.TextBoxFor(x => x.Password, new { type = "password", @class = "form-control", @required = "required" })
        @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
    </div>
    <div class="form-group m-3">
        <label for="userName">Şifre Tekrar</label>
        @Html.TextBoxFor(x => x.PasswordConfirm, new { type = "password", @class = "form-control", @required = "required" })
        @Html.ValidationMessageFor(x => x.PasswordConfirm, "", new { @class = "text-danger" })
    </div>
    <div class="form-group m-3">
        <label for="userName">Email</label>
        @Html.TextBoxFor(x => x.Email, new { type = "email", @class = "form-control", @required = "required" })
        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary m-3" id>Kayıt Ol</button>
</form>
